    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/fr.js"></script>
    <script>
        // Configuration du calendrier
        flatpickr(".calendar", {
            locale: "fr",
            minDate: "today",
            maxDate: new Date().fp_incr(14), // 2 semaines à l'avance
            disable: [
                function(date) {
                    // Désactiver les lundis
                    return (date.getDay() === 1);
                }
            ]
        });

        // Gestion des modèles
        const modelOptions = document.querySelectorAll('.model-option');
        let selectedModel = null;

        modelOptions.forEach(option => {
            option.addEventListener('click', function() {
                modelOptions.forEach(opt => opt.classList.remove('selected'));
                this.classList.add('selected');
                selectedModel = this;
                document.getElementById('model').value = this.dataset.value;
                document.getElementById('price').textContent = 'Prix : ' + this.dataset.price + '€';
            });
        });

        // Gestion des goûts personnalisés
        document.getElementById('flavor').addEventListener('change', function() {
            const customFlavorGroup = document.getElementById('custom-flavor-group');
            customFlavorGroup.style.display = (this.value === 'autre') ? 'block' : 'none';
        });

        // Envoi du formulaire
        document.getElementById('chicha-reservation').addEventListener('submit', function(e) {
            e.preventDefault();
            
            if (!selectedModel) {
                alert('Veuillez sélectionner un modèle de chicha');
                return;
            }

            // Envoi via FormSubmit (remplacer par votre email)
            fetch(this.action, {
                method: 'POST',
                body: new FormData(this),
                headers: {
                    'Accept': 'application/json'
                }
            })
            .then(response => {
                if (response.ok) {
                    document.getElementById('chicha-reservation').classList.add('hidden');
                    document.getElementById('confirmation').classList.remove('hidden');
                } else {
                    alert("Une erreur s'est produite. Veuillez nous appeler au 06 17 10 04 45");
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert("Problème de connexion. Veuillez réessayer.");
            });
        });
    </script>
